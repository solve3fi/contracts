{
  "compilerOptions": {
     "types": ["mocha", "chai"],
     "typeRoots": ["./node_modules/@types"],
     "lib": ["es2020"],
     "module": "esnext",
     "moduleResolution": "node",
     "allowJs": true,
     "resolveJsonModule": true,
     "target": "es2020",
     "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,
     "strict": false,
     "skipLibCheck": true
   },
   "ts-node": {
     "esm": true,
     "experimentalSpecifierResolution": "node"
   }
 }
           